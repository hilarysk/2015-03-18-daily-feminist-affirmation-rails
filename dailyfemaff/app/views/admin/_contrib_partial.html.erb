<p>
  <strong>Items added by:</strong> <%= "#{@user.user_name}" %><br>
  <strong>Administrator since</strong>: <%= @user.created_at %>
</p>

<%  @items.each do |object| %>
 <% if object.class == Quote %>
   <%= render :partial => "public/quote_formatting", :locals => {:quote => "#{object.quote}", :quoter => "#{object.person.person}", :success_message=>""} %>
 
 <% elsif object.class == Term%>
   <%= render :partial => "public/term_formatting", :locals => {:term => "#{object.term}", :definition => "#{object.definition}", :phonetic => "#{object.phonetic}", :success_message=>""} %>
   
<% elsif object.class == Excerpt%>
  <%= render :partial => "public/excerpt_formatting", :locals => {:excerpt => "#{object.excerpt}", :person => "#{object.person.person}", :source => "#{object.source}", :success_message=>""} %>
   
 <% elsif object.class == Person%>
   <% if object.state == ""%>
     <% @state = "" %>
   <% else  %>
      <% @state = "#{object.state}, " %>
   <% end  %>
   <%= render :partial => "public/person_formatting", :locals => {:bio => "#{object.bio}", :name => "#{object.person}", :image => "#{object.image}", :source => "#{object.source}", :state => "#{@state}", :country => "#{object.country}", :caption => "#{object.caption}", :success_message=>""} %>

   
   
 <% end %>
<% end %>
